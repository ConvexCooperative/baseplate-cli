{
  "name": "@single-spa-foundry/cli",
  "version": "0.0.0",
  "description": "Deployment CLI for single-spa foundry",
  "type": "module",
  "main": "lib/js-api.js",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "cli": "cross-env NODE_OPTIONS=\"--loader ts-node/esm --experimental-specifier-resolution=node\" FOUNDRY_TOKEN=sample node src/cli.ts",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "lint": "eslint \"src/**/*\"",
    "build": "rimraf lib && tsc",
    "prepublishOnly": "pnpm run build",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JustUtahCoders/single-spa-foundry-cli.git"
  },
  "author": "Joel Denning",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JustUtahCoders/single-spa-foundry-cli/issues"
  },
  "homepage": "https://github.com/JustUtahCoders/single-spa-foundry-cli#readme",
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.21.0",
    "@jest/types": "^27.5.1",
    "babel-jest": "^27.5.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.10.0",
    "eslint-config-ts-important-stuff": "^1.1.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-cli": "^27.5.1",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.6.0",
    "typescript": "^4.6.2",
    "yargs": "^17.3.1"
  },
  "dependencies": {
    "@types/node": "^17.0.21",
    "@types/yargs": "^17.0.9"
  }
}
