{
  "name": "@baseplate-sdk/cli",
  "version": "1.0.2",
  "description": "Deployment CLI for Baseplate",
  "type": "module",
  "main": "lib/js-api.js",
  "bin": "lib/cli.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "cli": "cross-env NODE_OPTIONS=\"--loader ts-node/esm --experimental-specifier-resolution=node --experimental-fetch\" node src/cli.ts",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "lint": "eslint \"src/**/*\"",
    "build": "rimraf lib && tsc",
    "prepublishOnly": "pnpm run build",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "types": "lib/js-api.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JustUtahCoders/baseplate-cli.git"
  },
  "author": "Joel Denning",
  "license": "See LICENSE file",
  "bugs": {
    "url": "https://github.com/JustUtahCoders/baseplate-cli/issues"
  },
  "homepage": "https://github.com/JustUtahCoders/baseplate-cli#readme",
  "devDependencies": {
    "@babel/core": "^7.20.12",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.0",
    "@jest/globals": "^29.4.1",
    "@jest/types": "^29.4.1",
    "@types/jest": "^29.4.0",
    "babel-jest": "^29.4.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-ts-important-stuff": "^1.1.0",
    "husky": "^8.0.3",
    "jest": "^29.4.1",
    "jest-cli": "^29.4.1",
    "node-fetch": "^3.3.0",
    "prettier": "^2.8.3",
    "pretty-quick": "^3.1.3",
    "rimraf": "^4.1.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4",
    "yargs": "^17.6.2"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.259.0",
    "@baseplate-sdk/utils": "^3.1.2",
    "@baseplate-sdk/web-app": "^2.0.3",
    "@types/node": "^18.11.18",
    "@types/yargs": "^17.0.20"
  }
}
